<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FAF9F9"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/bg"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                >

                <Button
                    android:id="@+id/clearBTM"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:textSize="13sp"
                    android:layout_gravity="end"
                    android:text=""
                    android:background="@drawable/ic_baseline_delete_24"
                    />

                <Button
                    android:id="@+id/saveBTM"
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:textSize="13sp"
                    android:text="Book Now"
                    android:layout_marginLeft="3dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/slabo_13px"
                android:text="Welcome To Hotel Casa!"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="10dp"
                >

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="38dp"
                    android:layout_gravity="bottom"
                    android:src="@drawable/icon"
                    />

                <TextView
                    android:id="@+id/output_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:fontFamily="@font/slabo_13px"
                    android:text="Sample"
                    android:textColor="@color/white"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/input_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/slabo_13px"
            android:hint="Enter Name"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#EAD6B9"
            >

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:fontFamily="@font/slabo_13px"
                android:text="Booking Date Section"
                android:textAlignment="center"
                android:textSize="20sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/output_check_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/slabo_13px"
                    android:text="Sample"
                    android:textAlignment="center"
                    android:textSize="15sp"
                    />

                <Button
                    android:id="@+id/check_in_BTN"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="Check In"
                    android:layout_marginStart="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/output_check_out"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/slabo_13px"
                    android:text="Sample"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/check_out_BTN"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="Check oUT"
                    android:layout_marginStart="5dp"
                    android:textSize="13sp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <Button
                    android:id="@+id/clear_date_btn"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="Clear Dates"
                    android:textSize="13sp"
                    android:layout_marginStart="5dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/slabo_13px"
                    android:text="Total Days: "
                    android:textAlignment="center"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/number_of_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/slabo_13px"
                    android:text="Sample"
                    android:textAlignment="center"
                    android:textSize="25sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="#EAD6B9"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginTop="7dp"
                >

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/slabo_13px"
                    android:text="Room Capacity"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    />

                <Spinner
                    android:id="@+id/room_capacity"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    />

            </LinearLayout>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/slabo_13px"
                android:text="Room Type: "
                android:textAlignment="center"
                android:textSize="20sp"
                />

            <RadioGroup
                android:id="@+id/room_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <RadioButton
                    android:id="@+id/suite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Suite"/>

                <RadioButton
                    android:id="@+id/de_luxe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="De Luxe"/>

                <RadioButton
                    android:id="@+id/regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Regular"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/slabo_13px"
                    android:text="Payment Type"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    />

                <Spinner
                    android:id="@+id/payment_type"
                    android:layout_width="150dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/slabo_13px"
                android:text="Total Payment: "
                android:textAlignment="center"
                android:textSize="25sp"
                android:layout_marginTop="4dp"
                />

            <TextView
                android:id="@+id/paymentTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/slabo_13px"
                android:text="Sample"
                android:textAlignment="center"
                android:textSize="25sp"
                android:layout_marginTop="4dp"
                />


        </LinearLayout>

        <Button
            android:id="@+id/computeBTM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compute"
            />

        <Button
            android:id="@+id/completeBTM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete"
            />

    </LinearLayout>

</ScrollView>